<%= render 'layouts/page_title', title: "Showing all Drivers" %>
<div align="center">
  <%= will_paginate %>
</div>
<div align="center">
  <% @drivers.each do |driver| %>
    <ul class="list-inline">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(driver), driver_path(driver) %></li>
          <li class="driver-title"><%= link_to driver.name.capitalize, driver_path(driver) %></li>
          <li><small><%= pluralize(driver.duties.count, "duty") if driver.duties %></small></li>
          <% if current_driver.admin? && !driver.admin %>
            <li><%= link_to "Edit Driver", edit_driver_path(driver), class: "btn btn-xs btn-warning"%></li>
            <li><%= link_to "Delete Driver", driver_path(driver), method: :delete, data: {confirm: "Are you sure you want to delete driver and all associated duties??"}, class: "btn btn-xs btn-danger"%></li>
          <% end %>
       </div>
      </div>
    </ul>  
  <% end %>
</div>
<div align="center">
  <%= will_paginate %>
</div>