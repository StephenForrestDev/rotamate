<%= render 'layouts/page_title', title: "Log In" %>
<%= form_for(:session, :html => {class: "form-horizontal",role: "form"}, url: login_path) do |f| %>
  <div class= "form-group">
    <div class= "control-label col-md-2">
      <%= f.label :email %>
    </div>
    <div class= "col-md-8">
       <%= f.email_field :email, class:"form-control",  placeholder:"Enter your email" %>
    </div>
  </div>
  <div class= "form-group">
    <div class= "control-label col-md-2">
      <%= f.label :password %>
    </div>
    <div class= "col-md-8">
       <%= f.password_field :password, class:"form-control"%>
    </div>
  </div>
  <div class="col-md-offset-2 col-md-6">
    <%= f.submit "Log In", class: "btn btn-primary btn-lg btn-xlarge" %>
  </div>
<% end %>
<div class="col-md-6 col-md-offset-1">
  <%= link_to "[Cancel and return to home page]", 'pages/home' %>
</div>